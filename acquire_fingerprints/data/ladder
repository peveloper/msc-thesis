plot_dir = "plots/"
filename = substr(file, 0, strstrt(file, ".") - 1)
binwidth = 30
binstart = 100
load 'hist.fct'
set xlabel "AVG Bitrate (bits/s)" offset -0.1,0,0
set ylabel "Number of fingerprints"
set title sprintf("Bitrate Ladder ID: %s (120s playback)", filename)
set term png
set decimal locale
set xtics nomirror out rotate by 90 offset 0,graph -0.06 scale 2
set xtics font ", 8"
set ytics font ", 10"
unset key
set grid
set format "%.1s%c"
set output sprintf("%s%s_ladder.png", plot_dir, filename)
plot file @hist ls 2 title filename
